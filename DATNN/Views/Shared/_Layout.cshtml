                                    <span class="dropdown-item disabled">Xin chào, @User.Identity.Name</span>
                                    <a asp-controller="NguoiDung" asp-action="Edit" class="dropdown-item">Tài khoản của tôi</a>
                                    <a asp-controller="DiaChiNguoiDung" asp-action="Index" class="dropdown-item">Địa chỉ</a>
                                    <a asp-controller="GioHang" asp-action="LichSuDatHang" class="dropdown-item">Lịch sử mua hàng</a>
                                    <a asp-controller="DoiTra" asp-action="LichSuYeuCau" class="dropdown-item">Lịch sử Đổi/Trả</a>
