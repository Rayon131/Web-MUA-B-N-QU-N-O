    </div>

    <div class="containers" style="margin-top: 150px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light pt-5 pb-4 border-top">
        <div class="container">
            <div class="row">
                <!-- Logo và mô tả -->
                <div class="col-md-4 mb-4">
