@model DATNN.ViewModel.DoiMatKhauViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div style="margin-top:200px;" class="container">
    <h2 class="text-center mb-4">🔒 Đổi mật khẩu</h2>

    <div class="text-center mb-3">
        <p><strong>@Model.TenDangNhap</strong> (@Model.Email)</p>
    </div>

    <form asp-action="ChangePassword" method="post" class="w-75 mx-auto">
        <div class="mb-3">
            <label asp-for="MatKhauCu" class="form-label">Mật khẩu cũ</label>
            <input asp-for="MatKhauCu" type="password" class="form-control" />
            <span asp-validation-for="MatKhauCu" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MatKhauMoi" class="form-label">Mật khẩu mới</label>
            <input asp-for="MatKhauMoi" type="password" class="form-control" />
            <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="XacNhanMatKhauMoi" class="form-label">Xác nhận mật khẩu mới</label>
            <input asp-for="XacNhanMatKhauMoi" type="password" class="form-control" />
            <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-5">Lưu thay đổi</button>
            <a asp-action="Edit" class="btn btn-secondary px-5 ms-3">Quay lại</a>
        </div>
    </form>

   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
