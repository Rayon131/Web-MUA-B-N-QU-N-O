@model IEnumerable<DATNN.Models.YeuCauDoiTra>
@{
    ViewData["Title"] = "Lịch Sử Yêu Cầu Đổi/Trả";
}

<div class="container mt-5 mb-5">
    <h3>Lịch Sử Yêu Cầu Đổi/Trả</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có yêu cầu đổi/trả nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Mã Yêu Cầu</th>
                        <th>Sản Phẩm</th>
                        <th>Loại Yêu Cầu</th>
                        <th>Ngày Tạo</th>
                        <th>Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>
                                <span class="fw-bold">
                                    @(item.DonHangChiTiet.TenSanPham_Luu ?? item.DonHangChiTiet.SanPhamChiTiet?.SanPham?.TenSanPham ?? "Sản phẩm đã xóa")
                                </span>

                                <!-- Màu và Size: Ưu tiên lấy từ cột _Luu -->
                                <br />
                                <small class="text-muted">
                                    @(item.DonHangChiTiet.TenMau_Luu ?? item.DonHangChiTiet.SanPhamChiTiet?.MauSac?.TenMau ?? "N/A") -
                                    @(item.DonHangChiTiet.TenSize_Luu ?? item.DonHangChiTiet.SanPhamChiTiet?.Size?.TenSize ?? "N/A")
                                </small>
                            </td>
                            <td>@(item.LoaiYeuCau == LoaiYeuCau.DoiHang ? "Đổi hàng" : "Trả hàng / Hoàn tiền")</td>
                            <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge
                                    @(item.TrangThai == TrangThaiYeuCauDoiTra.HoanThanh ? "bg-success" :
                                      item.TrangThai == TrangThaiYeuCauDoiTra.DaTuChoi ? "bg-danger" :
                                      item.TrangThai == TrangThaiYeuCauDoiTra.ChoXacNhan ? "bg-warning text-dark" : "bg-info")">
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </span>
                            </td>
                            <td class="text-end">
                                <!-- SỬA: Thêm nút này để dẫn đến trang chi tiết -->
                                <a asp-action="ChiTietYeuCau" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>