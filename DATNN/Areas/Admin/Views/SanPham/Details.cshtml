@model DATNN.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-box-seam"></i> Chi tiết sản phẩm</h3>
        </div>

        <div class="card-body p-4">

            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model?.AnhSanPham))
                    {
                        <img src="~/images/@Model.AnhSanPham"
                             alt="Ảnh sản phẩm"
                             class="img-fluid rounded shadow-sm border"
                             style="max-height: 260px; object-fit: contain;">
                    }
                    else
                    {
                        <div class="text-muted fst-italic">Không có hình ảnh</div>
                    }
                </div>

                <div class="col-md-8">
                    <h4 class="fw-bold">@Model.TenSanPham</h4>
                    <p class="text-secondary">@Model.MoTa</p>

                    <div class="mt-3">
                        <span class="fw-bold">Trạng thái:</span>
                        @{
                            string statusText;
                            string statusClass;

                            switch (Model.TrangThai)
                            {
                                case 1:
                                    statusText = "Đang kinh doanh";
                                    statusClass = "badge bg-success";
                                    break;
                                case 2:
                                    statusText = "Chưa kinh doanh";
                                    statusClass = "badge bg-info text-dark";
                                    break;
                                default:
                                    statusText = "Ngừng kinh doanh";
                                    statusClass = "badge bg-danger";
                                    break;
                            }
                        }

                        <span class="@statusClass px-3 py-2">@statusText</span>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-sm-4 fw-bold">Danh mục:</div>
                        <div class="col-sm-8">@Model.DanhMuc.TenDanhMuc</div>

                        <div class="col-sm-4 fw-bold">Chất liệu:</div>
                        <div class="col-sm-8">@Model.ChatLieu.TenChatLieu</div>

                        <div class="col-sm-4 fw-bold">Xuất xứ:</div>
                        <div class="col-sm-8">@Model.XuatXu.TenXuatXu</div>

                        <div class="col-sm-4 fw-bold">Ngày tạo:</div>
                        <div class="col-sm-8">
                            @Model.ThoiGianTao?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="card-footer bg-light py-3 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>

            <a asp-action="Edit" asp-route-id="@Model?.MaSanPham"
               class="btn btn-warning text-white">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>
