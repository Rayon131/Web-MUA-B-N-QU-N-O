@model IEnumerable<DATNN.Models.YeuCauDoiTra>
@{
    ViewData["Title"] = "Quản lý Yêu cầu Đổi/Trả";
}

<div class="card">
    <div class="card-header">
        <h3>Quản lý Yêu cầu Đổi/Trả</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Mã YC</th>
                    <th>Khách Hàng</th>
                    <th>Sản Phẩm</th>
                    <th>Loại Yêu Cầu</th>
                    <th>Ngày Tạo</th>
                    <th>Trạng Thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#@item.Id</td>
                        <td>@item.NguoiDung.HoTen</td>
                        <td>
                            <strong>
                                @(item.DonHangChiTiet.TenSanPham_Luu ?? item.DonHangChiTiet.SanPhamChiTiet?.SanPham?.TenSanPham ?? "Sản phẩm đã xóa")
                            </strong>
                            <br />
                            <!-- Màu và Size: Ưu tiên lấy từ cột _Luu -->
                            <small class="text-muted">
                                @(item.DonHangChiTiet.TenMau_Luu ?? item.DonHangChiTiet.SanPhamChiTiet?.MauSac?.TenMau ?? "N/A") -
                                @(item.DonHangChiTiet.TenSize_Luu ?? item.DonHangChiTiet.SanPhamChiTiet?.Size?.TenSize ?? "N/A")
                            </small>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.LoaiYeuCau)</td>
                        <td>@item.NgayTao.ToString("g")</td>
                        <td>
                            <span class="badge @(item.TrangThai == TrangThaiYeuCauDoiTra.HoanThanh ? "bg-success" : item.TrangThai == TrangThaiYeuCauDoiTra.DaTuChoi ? "bg-danger" : "bg-warning text-dark")">
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
