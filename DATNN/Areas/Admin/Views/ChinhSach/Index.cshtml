@model IEnumerable<DATNN.Models.ChinhSach>

@{
    int count = Model.Count();
    int columns = 1;

    if (count == 1) columns = 1;
    else if (count == 2) columns = 2;
    else if (count <= 4) columns = 2;
    else if (count <= 6) columns = 3;
    else columns = 4;
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Danh sách chính sách</h2>

    <div class="policy-grid" style="grid-template-columns: repeat(@columns, 1fr);">
        @foreach (var item in Model)
        {
            <div class="policy-card-container">
                <div class="policy-card shadow-sm p-3 rounded">

                    <h5 class="policy-title">@item.TenChinhSach</h5>

                    <div class="mt-3 d-flex justify-content-between">
                        <a href="@Url.Action("Details", "ChinhSach", new { id = item.id })"
                           class="btn btn-outline-primary btn-sm">Xem chi tiết</a>

                        <a href="@Url.Action("Edit", "ChinhSach", new { id = item.id })"
                           class="btn btn-primary btn-sm">Sửa</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .policy-grid {
        display: grid;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

    .policy-card-container {
        width: 100%;
    }

    .policy-card {
        background: linear-gradient(135deg, #fefefe, #f2f2f2);
        border-radius: 16px;
        border: 1px solid #eee;
        transition: 0.3s ease;
        padding: 20px;
    }

        .policy-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

    .policy-title {
        font-weight: 600;
        color: #222;
        min-height: 48px;
        font-size: 1.1rem;
    }

    .btn-sm {
        font-size: 0.85rem;
        padding: 0.35rem 0.7rem;
    }
</style>
