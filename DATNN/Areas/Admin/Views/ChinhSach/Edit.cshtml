@model DATNN.Models.ChinhSach

@{
    ViewData["Title"] = "Sửa Chính Sách";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group mb-3">
        <label asp-for="TenChinhSach" class="form-label"></label>
        <input asp-for="TenChinhSach" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="NoiDung" class="form-label"></label>
        <textarea asp-for="NoiDung" id="editor" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

<!-- CKEditor 5 CDN -->
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>
