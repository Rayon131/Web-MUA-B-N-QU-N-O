@{
    ViewData["Title"] = "Kết quả thanh toán";
    bool isSuccess = ViewBag.Success ?? false;
}

<div class="container text-center mt-5">
    @if (isSuccess)
    {
        <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
        <h1 class="mt-3 text-success">Thanh toán thành công!</h1>
    }
    else
    {
        <i class="fas fa-times-circle text-danger" style="font-size: 80px;"></i>
        <h1 class="mt-3 text-danger">Thanh toán thất bại!</h1>
    }

    <p class="lead mt-3">@ViewBag.Message</p>

    <div class="mt-4">
        <a href="@Url.Action("Index", "BanHang", new { area = "Admin" })" class="btn btn-primary">Quay lại trang bán hàng</a>
        <a href="@Url.Action("Index", "DanhSachDonHang", new { area = "Admin" })" class="btn btn-secondary">Xem danh sách đơn hàng</a>
    </div>
</div>