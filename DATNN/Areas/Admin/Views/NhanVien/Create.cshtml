@using DATNN.ViewModel
@model CreateNhanVienViewModel
@{
    ViewData["Title"] = "Thêm mới Nhân viên";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HoTen" class="control-label">Họ và Tên</label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MaQuyen" class="control-label">Vai trò</label>
                    <select asp-for="MaQuyen" class="form-control" asp-items="ViewBag.MaQuyen"></select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TenDangNhap" class="control-label">Tên đăng nhập</label>
                    <input asp-for="TenDangNhap" class="form-control" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                    <input asp-for="MatKhau" class="form-control" type="password" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SoDienThoai" class="control-label">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NgaySinh" class="control-label">Ngày sinh</label>
                    <input asp-for="NgaySinh" class="form-control" type="date" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="GioiTinh" class="control-label">Giới tính</label>
                    <div>
                        <input type="radio" asp-for="GioiTinh" value="Nam" checked /> Nam
                        <input type="radio" asp-for="GioiTinh" value="Nữ" class="ms-3" /> Nữ
                        <input type="radio" asp-for="GioiTinh" value="Khác" class="ms-3" /> Khác
                    </div>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
@* ========================================================== *@
@* === THÊM KHỐI CODE NÀY VÀO CUỐI FILE === *@
@* ========================================================== *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}