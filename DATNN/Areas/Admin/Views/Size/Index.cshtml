@model IEnumerable<DATNN.Models.Size>

@{
    ViewData["Title"] = "Danh sách Size";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    bool hasActive = Model.Any(x => x.TrangThai == 1);
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <h3 class="fw-bold mb-0">📏 Danh sách Size</h3>

        <div>
            @if (hasActive)
            {
                <a asp-action="Create" class="btn btn-success me-2">
                    ➕ Thêm Size mới
                </a>

             
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">
                    ⬅️ Trở về danh sách
                </a>
            }
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Tên Size</th>
                    <th>Mô tả</th>
                   
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenSize</td>
                        <td>@item.MoTa</td>

                      

                        <td class="text-center">
                            @if (item.TrangThai == 1)
                            {
                                <a asp-action="Edit" asp-route-id="@item.MaSize" class="btn btn-warning btn-sm me-1">✏️ Sửa</a>

                                <a asp-action="Details" asp-route-id="@item.MaSize" class="btn btn-info btn-sm text-white me-1">🔍 Xem</a>

                              
                            }
                            else
                            {
                                <a asp-action="KhoiPhuc" asp-route-id="@item.MaSize"
                                   class="btn btn-success btn-sm"
                                   onclick="return confirm('Bạn có muốn khôi phục size này?');">
                                    🔄 Khôi phục
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- PHÂN TRANG ĐẸP & CỐ ĐỊNH CUỐI MÀN HÌNH -->
<nav class="pagination-wrapper mt-4">
    <ul class="pagination pagination-lg justify-content-center shadow-sm">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }
    </ul>
</nav>

<style>
    /* Thanh phân trang cố định phía dưới */
    .pagination-wrapper {
        position: sticky;
        bottom: 0;
        background: #ffffff;
        padding: 10px 0;
        z-index: 200;
        border-top: 1px solid #ddd;
    }

        .pagination-wrapper .pagination .page-link {
            padding: 10px 18px;
            border-radius: 8px;
            font-weight: 500;
        }

        .pagination-wrapper .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.4);
        }
</style>
